{
  "platform": "docker",
  "app": "coderoot-bot",
  "port": 8080,
  "healthCheck": {
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "build": {
    "dockerfile": "Dockerfile.liara"
  },
  "envs": [
    {
      "name": "PRODUCTION_MODE",
      "value": "true"
    },
    {
      "name": "SERVER_PORT",
      "value": "8080"
    },
    {
      "name": "DEFAULT_LANGUAGE",
      "value": "fa"
    }
  ],
  "volumes": [
    {
      "name": "logs",
      "mountPath": "/app/logs"
    }
  ],
  "disks": [
    {
      "name": "logs",
      "size": 1
    }
  ]
}
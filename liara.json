{
  "platform": "python",
  "app": "coderoot-bot",
  "port": 8000,
  "build": {
    "location": ".",
    "commands": [
      "pip install --upgrade pip",
      "pip install -r requirements.txt --no-cache-dir"
    ]
  },
  "run": {
    "command": "python bot.py"
  },
  "environment": {
    "PYTHONUNBUFFERED": "1",
    "PYTHONDONTWRITEBYTECODE": "1"
  }
}
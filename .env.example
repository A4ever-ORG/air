# CodeRoot Bot Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# TELEGRAM BOT CONFIGURATION (REQUIRED)
# ===========================================
BOT_TOKEN=your_telegram_bot_token_here
API_ID=your_telegram_api_id
API_HASH=your_telegram_api_hash

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
ADMIN_USER_ID=your_telegram_user_id
ADMIN_USERNAME=your_telegram_username

# ===========================================
# DATABASE CONFIGURATION (REQUIRED)
# ===========================================
MONGO_URI=mongodb://localhost:27017/coderoot_bot
DATABASE_NAME=coderoot_bot
REDIS_URL=redis://localhost:6379

# ===========================================
# SERVER CONFIGURATION
# ===========================================
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
ENVIRONMENT=production

# ===========================================
# PAYMENT CONFIGURATION
# ===========================================
CARD_NUMBER=your_card_number
CARD_HOLDER_NAME=your_card_holder_name

# ===========================================
# CHANNEL CONFIGURATION
# ===========================================
MAIN_CHANNEL_ID=your_main_channel_id
MAIN_CHANNEL_USERNAME=your_main_channel_username

# ===========================================
# PRICING CONFIGURATION
# ===========================================
PROFESSIONAL_PLAN_PRICE=50000
VIP_PLAN_PRICE=100000
COMMISSION_RATE=10

# ===========================================
# BOT SETTINGS
# ===========================================
BOT_USERNAME=your_bot_username
WEBHOOK_URL=https://your-domain.com/webhook
DEFAULT_LANGUAGE=fa

# ===========================================
# MODE CONFIGURATION
# ===========================================
DEMO_MODE=false
PRODUCTION_MODE=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===========================================
# DEPLOYMENT SPECIFIC
# ===========================================
# For Liara deployment:
# PORT=8080
# NODE_ENV=production

# For Docker deployment:
# DOCKER_ENV=true

# For Heroku deployment:
# PORT=$PORT (automatically set by Heroku)